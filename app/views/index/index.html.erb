<html lang="en" ng-app="FOffside">

  <head>
    <h1>Fantasy Offside</h1>
      <link href="/css/styles.css" rel="stylesheet">
      <script src="bower_components/angular/angular.js"></script>
      <script src="js/app.js"></script>
      <script src="js/fOffsideController.js"></script>
  </head>

  <body ng-controller="FOffsideController as Ctrl">
    <div ng-show="Ctrl.showForm">
      <form class="form-horizontal">
        <input type="text" ng-model="Ctrl.inputId" placeholder="Please enter your team id">
        <button class="btn" ng-click="Ctrl.getSquad()">Submit</button>
      </form>
    </div>

    <div ng-show="Ctrl.displayingCurrentSquad">
      <table >
        <tr>
          <th>Name</th>
          <th>Team</th>
          <th>Position</th>
        </tr>
        <tr>
          <td> {{ Ctrl.goalkeeper.playerdata }} </td>
          <td> {{ Ctrl.goalkeeper.teamname }} </td>
          <td> {{ Ctrl.goalkeeper.position }} </td>
        <tr ng-repeat="defender in Ctrl.defenders">
          <td> {{ defender.playerdata }} </td>
          <td> {{ defender.teamname }} </td>
          <td> {{ defender.position }} </td>
        </tr>
        <tr ng-repeat="midfielder in Ctrl.midfielders">
          <td> {{ midfielder.playerdata }} </td>
          <td> {{ midfielder.teamname }} </td>
          <td> {{ midfielder.position }} </td>
        </tr>
        <tr ng-repeat="forward in Ctrl.forwards">
          <td> {{ forward.playerdata }} </td>
          <td> {{ forward.teamname }} </td>
          <td> {{ forward.position }} </td>
        </tr>
      </table>
      <table>
        <tr>
          <th>Name</th>
          <th>Team</th>
          <th>Position</th>
        </tr>
        <tr ng-repeat="substitute in Ctrl.substitutes">
          <td> {{ substitute.playerdata }} </td>
          <td> {{ substitute.teamname }} </td>
          <td> {{ substitute.position }} </td>
        </tr>
      </table>
      <button ng-click="Ctrl.optimiseSquad()">Optimise Squad</button>
    </div>

    <div ng-show="Ctrl.displayingOptimisedSquad" id="Pitch">

      <!-- <img src="/img/pitch.png"></img> -->

      <!-- GKeeper -->

      <div class="PitchRow">
        <div class="PlayerContainer1of5"></div>
        <div class="PlayerContainer1of5"></div>
        <div class="PlayerContainer1of5">
          <img src="/img/{{Ctrl.goalkeeper.image}}" class="ShirtImage"></img>
          {{Ctrl.goalkeeper.playerdata}}
        </div>
        <div class="PlayerContainer1of5"></div>
        <div class="PlayerContainer1of5"></div>
      </div>

      <!-- Defenders -->

      <div class="PitchRow" ng-show="Ctrl.defenders.length === 5" >
        <div class="PlayerContainer1of5" ng-repeat="defender in Ctrl.defenders">
          <img src="/img/{{defender.image}}" class="ShirtImage"></img>
          {{defender.playerdata}}
        </div>
      </div>

      <div class="PitchRow" ng-show="Ctrl.defenders.length === 4" >
        <div class="PlayerContainer1of4" ng-repeat="defender in Ctrl.defenders">
          <img src="/img/{{defender.image}}" class="ShirtImage"></img>
          {{defender.playerdata}}
        </div>
      </div>

      <div class="PitchRow" ng-show="Ctrl.defenders.length === 3" >
        <div class="PlayerContainer1of5"></div>
        <div class="PlayerContainer1of5" ng-repeat="defender in Ctrl.defenders">
          <img src="/img/{{defender.image}}" class="ShirtImage"></img>
          {{defender.playerdata}}
        </div>
        <div class="PlayerContainer1of5"></div>
      </div>

      <!-- Midfielders -->

      <div class="PitchRow" ng-show="Ctrl.midfielders.length === 5" >
        <div class="PlayerContainer1of5" ng-repeat="midfielder in Ctrl.midfielders">
          <img src="/img/{{midfielder.image}}" class="ShirtImage"></img>
          {{midfielder.playerdata}}
        </div>
      </div>

      <div class="PitchRow" ng-show="Ctrl.midfielders.length === 4" >
        <div class="PlayerContainer1of4" ng-repeat="midfielder in Ctrl.midfielders">
          <img src="/img/{{midfielder.image}}" class="ShirtImage"></img>
          {{midfielder.playerdata}}
        </div>
      </div>

      <div class="PitchRow" ng-show="Ctrl.midfielders.length === 3" >
        <div class="PlayerContainer1of5"></div>
        <div class="PlayerContainer1of5" ng-repeat="midfielder in Ctrl.midfielders">
          <img src="/img/{{midfielder.image}}" class="ShirtImage"></img>
          {{midfielder.playerdata}}
        </div>
        <div class="PlayerContainer1of5"></div>
      </div>

      <!-- Forwards -->

      <div class="PitchRow" ng-show="Ctrl.forwards.length === 3" >
        <div class="PlayerContainer1of5"></div>
        <div class="PlayerContainer1of5" ng-repeat="forward in Ctrl.forwards">
          <img src="/img/{{forward.image}}" class="ShirtImage"></img>
          {{forward.playerdata}}
        </div>
        <div class="PlayerContainer1of5"></div>
      </div>

      <div class="PitchRow" ng-show="Ctrl.forwards.length === 2" >
        <div class="PlayerContainer1of4"></div>
        <div class="PlayerContainer1of4" ng-repeat="forward in Ctrl.forwards">
          <img src="/img/{{forward.image}}" class="ShirtImage"></img>
          {{forward.playerdata}}
        </div>
        <div class="PlayerContainer1of4"></div>
      </div>

      <div class="PitchRow" ng-show="Ctrl.forwards.length === 1" >
        <div class="PlayerContainer1of5"></div>
        <div class="PlayerContainer1of5"></div>
        <div class="PlayerContainer1of5" ng-repeat="forward in Ctrl.forwards">
          <img src="/img/{{forward.image}}" class="ShirtImage"></img>
          {{forward.playerdata}}
        </div>
        <div class="PlayerContainer1of5"></div>
        <div class="PlayerContainer1of5"></div>
      </div>
      <div class="PitchRow"></div>

    </div>

  </body>
</html>
